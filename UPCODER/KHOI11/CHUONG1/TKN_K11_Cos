import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        double soNguyenX = scanner.nextDouble();
        double ketQua = ((Math.abs(2*soNguyenX + 3)) / Math.cos(soNguyenX)) + Math.sqrt(2 + Math.cos(soNguyenX));
        System.out.println(ketQua);
    }
}
