import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int soNguyen = scanner.nextInt();
        int tong=0;
        for(int i=1;i<soNguyen;i++){
            if(soNguyen%i==0){
                tong+=i;
            }
        }
        if(tong==soNguyen){
            System.out.print("Yes");
        } else {
            System.out.println("No");
        }
    }
}
